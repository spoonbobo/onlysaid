# TTS Server Configuration
TTS_SERVER_HOST=0.0.0.0
TTS_SERVER_PORT=8000
TTS_SERVER_WORKERS=1

# Model Configuration
TTS_MODELS_CONFIG_PATH=config/models.json
TTS_MODELS_CACHE_DIR=models/cache
TTS_CUSTOM_MODELS_DIR=models/custom

# Audio Configuration
TTS_SAMPLE_RATE=22050
TTS_AUDIO_FORMAT=wav
TTS_CHUNK_SIZE=1024
TTS_OVERLAP_SIZE=256

# Voice Cloning Configuration
TTS_VOICE_CLONING_ENABLED=true
TTS_REFERENCE_AUDIO_PATH=assets/reference_audio/
TTS_MAX_AUDIO_DURATION=30
TTS_MIN_AUDIO_DURATION=3

# Streaming Configuration
TTS_STREAMING_ENABLED=true
TTS_MAX_SENTENCE_LENGTH=500
TTS_BUFFER_SIZE=4096
TTS_MAX_CONCURRENT_REQUESTS=10

# GPU Configuration
TTS_USE_GPU=false
TTS_GPU_DEVICE=0

# Logging Configuration
TTS_LOG_LEVEL=INFO
TTS_LOG_FILE=logs/tts_server.log

# CORS Configuration
TTS_ENABLE_CORS=true
TTS_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting
TTS_RATE_LIMIT_ENABLED=true
TTS_RATE_LIMIT_REQUESTS=100
TTS_RATE_LIMIT_WINDOW=60

# Security
TTS_API_KEY_ENABLED=false
TTS_API_KEY=your_api_key_here

# Development
TTS_DEBUG=false
TTS_ENABLE_DOCS=true
TTS_ENABLE_REDOC=true 